<%= form_for @user do |f| %>
 
    <%= f.label "Email" %><br>
    <%= f.text_field :email, placeholder: "hello@peacekeeper.com" %>
    <%= show_errors(@user, :email) %><br>
    <%= f.label "Password" %><br>
    <%= f.password_field :password, placeholder: "Set your password" %>
    <%= show_errors(@user, :password) %><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
    <%= show_errors(@user, :password_confirmation) %><br>
    <%= f.label "Nickname" %><br>
    <%= f.text_field :nickname, placeholder: "Set you nickname" %>
    <%= show_errors(@user, :nickname) %><br>
    <%= f.label "admin" %><br>
    <%= f.check_box :admin %> <br>
    <%= f.label "Choose your profile pic." %><br>
    <%= f.file_field :image %><br>
    
    <%= f.submit "Submit" %>
<% end %>