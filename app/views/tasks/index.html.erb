
<% @tasks.each do |task| %>
    <% status_button =  %>
        <div class="card mb-3 bg-light";>
            <div class="card-body">
                <div class="row">
                    <div class="col-3 ">
                    <h5 class="card-title-left" style="margin-top: .5rem"><%= task.name %></h5>
                    </div>
                
                    <div class="col-2">
                    <%= button_to "Open task", task_path(task), class: "btn btn-outline-secondary", method: :get%>
                    </div>
                
                    <div class="col-2">
                    <%= button_to "Claim", toggle_claim_path(task), class: "btn btn-outline-secondary" %>
                    </div>

                    <div class="col-4" style="margin-top: .5rem">
                    <% if task.claimer %>
                        Claimed by: <%= User.find(task.claimer).nickname %>
                    <% else %>
                        Up for grabs 
                    <% end %>
                    </div>
            
                    <div class="col-1">
                        <div style="margin-top: .5rem">
                        <%= link_to task.status_description_button_image, toggle_status_path(task), method: :post, class: "align-right"%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        
    
    <% end %>

<%= button_to "Create New Task", new_task_path, method: "get", class: "btn btn-primary"%>


