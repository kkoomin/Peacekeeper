<%= form_for @task do |f| %>
    <%= f.label "name" %>
    <%= f.text_field :name %><br>
    <%= f.label "description" %>
    <%= f.text_area :description %><br>
    <%= f.label "Claim" %>
    <%= f.text_field :status %><br>
    <%= f.label "deadline" %>
    <%= f.text_field :deadline %><br>
    <%= f.label "pinned" %>
    <%= f.text_field :pinned %><br>
    
    <%= f.submit "Create" %>
<% end %>