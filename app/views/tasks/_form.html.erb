<%= form_for @task do |f| %>
    <%= f.label "name" %>
    <%= f.text_field :name %><br>
    <%= f.label "description" %>
    <%= f.text_area :description %><br>
    <%= f.label "deadline" %> <br>
    <%= f.date_select(:deadline, :order => [:day, :month, :year]) %><br>
    <%= f.label "pinned" %><br>
    <%= f.check_box :pinned %> <br>
    <% if current_user.admin == true %>
        <%= f.collection_select :claimer, @users, :id, :nickname %>
    <% end %>
    
    <%= f.submit "Create" %>
<% end %>




